function checkOther(obj){
    var str = obj.value;
   	if(str!=null&&str!="")
   	{
	   	var reg = /^([0-9]|(\.))*$/;
		if (reg.test(str)) 
		{
			if(str.length>10)
	   		{
	   			alert("长度不能超过10");
	   			obj.focus();
	   		}
		}else
		{
			alert("只能是数字或英文小数点");
			obj.focus();
		}
   	}
}


